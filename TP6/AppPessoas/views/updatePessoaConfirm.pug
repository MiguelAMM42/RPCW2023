extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Person Record Updated: #{p._id}
        
    .w3-container
        .w3-card-4
          .w3-container.w3-center
            img.w3-circle(src="/images/user.webp" alt="Avatar" width="300")
            ul.w3-ul.w3-card-4
                li #[b Nome:] #{p.nome}
                li #[b ID:] #{p._id}
                li #[b Age:] #{p.idade}
                li #[b Gender:] #{p.sexo}
    footer.w3-container.w3-blue 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]



