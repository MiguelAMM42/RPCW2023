extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Person Record Delete: #{p._id}
        
    .w3-container
        .w3-card-4
          .w3-container.w3-center
            img.w3-circle(src="/images/user.webp" alt="Avatar" width="300")
            ul.w3-ul.w3-card-4
                li #[b Nome:] #{p.nome}
                li #[b ID:] #{p._id}
                li #[b Age:] #{p.idade}
                li #[b Gender:] #{p.sexo}
                

        button.w3-btn.w3-round.w3-margin.w3-green
            a(href="/pessoas/delete/" + p._id + "/confirm") Confirm 
        button.w3-btn.w3-round.w3-margin.w3-red
            a(href="/") Cancel
    footer.w3-container.w3-blue 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]



