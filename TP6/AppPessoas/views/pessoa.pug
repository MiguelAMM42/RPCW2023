extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue.w3-center
      h1 Person Record: #{p._id}
        
    .w3-container
        .w3-card-4
          .w3-container.w3-center
            img.w3-circle(src="/images/user.webp" alt="Avatar" width="300")
            ul.w3-ul.w3-card-4.w3-margin
              .w3-card-4
                if p._id
                  li #[b ID:] #{p._id}
                else
                  li #[b ID:] --------------
              .w3-card-4
                if p.nome
                  li #[b Name:] #{p.nome}
                else
                  li #[b Name:] --------------
              .w3-card-4
                if p.idade
                  li #[b Age:] #{p.idade}
                else
                  li #[b Age:] --------------
              .w3-card-4
                if p.sexo
                  li #[b Gender:] #{p.sexo}
                else
                  li #[b Gender:] --------------
              .w3-card-4
                if p.profissao
                  li #[b Job] #{p.profissao}
                else
                  li #[b Job:] --------------
              .w3-card-4
                if p.CC
                  li #[b Legal ID: (CC)] #{p.CC}
                else if p.BI
                  li #[b Legal ID: (BI)] #{p.BI}
                else
                  li #[b Legal ID:] --------------
              .w3-card-4
                if p.marca_carro
                  li #[b Car Brand:] #{p.marca_carro}
                else
                  li #[b Car Brand:] --------------
              .w3-card-4
                if p.descrição 
                  li #[b Description:] #{p.descrição}
                else 
                  li #[b Description:] --------------
              .w3-card-4
                li #[b Address]
                if p.morada.cidade
                  li #[b City:] #{p.morada.cidade}
                else
                  li #[b City:] --------------
                if p.morada.distrito
                  li #[b District:] #{p.morada.distrito}
                else
                  li #[b District:] --------------
              .w3-card-4
                li #[b Political Party]
                if p.partido_politico.party_abbr
                  li #[b Abbr:] #{p.partido_politico.party_abbr}
                else
                  li #[b Abbr:] --------------
                if p.partido_politico.party_name
                  li #[b Name:] #{p.partido_politico.party_name}
                else
                  li #[b Name:] --------------
              .w3-card-4
                li #[b Favourite Sports]
                each i in p.desportos
                  li #[i #{i}]
              .w3-card-4
                li #[b Favourite Animals]
                each i in p.animais
                  li #[i #{i}]
              .w3-card-4
                li #[b Favourite Portuguese Celebrities]
                each i in p.figura_publica_pt
                  li #[i #{i}]
              .w3-card-4
                li #[b Favourite Destinies]
                each i in p.destinos_favoritos
                  li #[i #{i}]
              .w3-card-4
                li #[b Attributes]
                if p.atributos.fumador
                  li #[u Smoker:] Yes
                else
                  li #[u Smoker:] No 
                if p.atributos.gosta_cinema
                  li #[u Likes cinema:] Yes
                else
                  li #[u Likes cinema:] No 
                if p.atributos.gosta_viajar
                  li #[u Likes travelling:] Yes
                else
                  li #[u Likes travelling:] No 
                if p.atributos.acorda_cedo
                  li #[u Wakes up early:] Yes
                else
                  li #[u Wakes up early:] No 
                if p.atributos.gosta_ler
                  li #[u Likes reading:] Yes
                else
                  li #[u Likes reading:] No 
                if p.atributos.gosta_musica
                  li #[u Likes music:] Yes
                else
                  li #[u Likes music:] No 
                if p.atributos.gosta_comer
                  li #[u Likes eating:] Yes
                else
                  li #[u Likes eating:] No 
                if p.atributos.gosta_animais_estimacao
                  li #[u Likes pets:] Yes
                else
                  li #[u Likes pets:] No 
                if p.atributos.gosta_dancar
                  li #[u Likes dancing:] Yes
                else
                  li #[u Likes dancing:] No 
                if p.atributos.comida_favorita
                  li #[u Favourite food:] #{p.atributos.comida_favorita}
                else
                  li #[u Favourite food:] --------------

              

    footer.w3-container.w3-blue.w3-center 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]



