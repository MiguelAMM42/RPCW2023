extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Students List #[a.w3-btn.w3-round.w3-grey(href="/pessoas/registo") + ]
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Name
          th Age
          th Gender
          th Actions
        
        each p in plist
          tr
            td= p._id
            td
              a(href="/pessoas/"+p._id)= p.nome
            td= p.idade
              //a(href=s.gitlink) GitHub link
            td= p.sexo
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/pessoas/edit/"+p._id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/pessoas/delete/"+p._id) Delete
              
    footer.w3-container.w3-blue
      h5 Generated by RPCW2023 in #{d}
    